set exrc
set secure

set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set noexpandtab

set colorcolumn=81
highlight ColorColumn ctermbg=white

set number
syntax on
highlight LineNr ctermfg=white

set encoding=utf-8
set spelllang=en_us

set mouse=a
set ttymouse=xterm2

set statusline=2
set report=0

:highlight Comment ctermfg=lightblue
:highlight String ctermfg=lightgreen

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
